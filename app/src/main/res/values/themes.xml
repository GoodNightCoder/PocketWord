<resources>
    <!-- Base application theme. -->
    <style name="Theme.PocketWord" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="wordForegroundColor">@color/light_gray</item>
        <item name="shadowColor">@color/gray</item>
        <item name="statisticsBgColor">@color/light_blue_gray</item>
    </style>

    <style name="Theme.PocketWord.StatisticsActivity" parent="Theme.PocketWord">
        <item name="android:statusBarColor">?attr/statisticsBgColor</item>
    </style>
</resources>
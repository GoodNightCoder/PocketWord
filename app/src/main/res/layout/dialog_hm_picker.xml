<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rc_20"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.cyberlight.pocketword.widget.IntegerWheelPicker
            android:id="@+id/dialog_hm_hour_wp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:digitsEnable="false"
            app:indicatorText="@string/hm_picker_hour_indicator"
            app:maxValue="23"
            app:minValue="0" />

        <com.cyberlight.pocketword.widget.IntegerWheelPicker
            android:id="@+id/dialog_hm_minute_wp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:digitsEnable="false"
            app:indicatorText="@string/hm_picker_minute_indicator"
            app:maxValue="59"
            app:minValue="0" />
    </LinearLayout>

    <include layout="@layout/dialog_btn_bar" />
</LinearLayout>